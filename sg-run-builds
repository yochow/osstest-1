#!/usr/bin/tclsh8.4
# -*- Tcl -*- 
# usage: ./sg-run-builds <flight>

source osstestlib.tcl

readconfig

proc main {} {
    global flight jobinfo builds anyfailed

    set-flight
    db-open
    
    set builds {}

    pg_execute -array jobinfo dbh "
        SELECT job, recipe FROM jobs
			WHERE	flight=$flight
			AND	job like 'build%'
			AND   ( status = 'queued'
			  OR	status = 'preparing' )
		ORDER BY job
    " start-job

    set anyfailed 0
    foreach reap $builds {
        if {![reap-ts $reap]} {
            set anyfailed 1
        }
    }

    if {$anyfailed} {
        error "something failed"
    }
}

proc prepare-host {} {
    global prepared jobinfo
    if {[info exists prepared]} return

    run-ts ts-host-install
    run-ts ts-xen-build-prep

    set prepared 1
}

proc start-job {} {
    global jobinfo c builds flight

    job-set-host $flight $jobinfo(job) $c(host)

    setstatus preparing
    prepare-host

    setstatus running
    lappend builds [spawn-job/$jobinfo(recipe)]
}

proc spawn-job/build {} {
    return [spawn-ts ts-xen-build]
}
proc spawn-job/build-kern {} {
    return [spawn-ts ts-kernel-build]
}

main
