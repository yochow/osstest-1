#!/usr/bin/perl -w

use strict qw(vars);
use DBI;
use Osstest;
use Osstest::TestSupport;

tsreadconfig();

my $only;
if (@ARGV && $ARGV[0] =~ m/^--power=([01])$/) {
    $only= $1;
    shift @ARGV;
}

our ($whhost) = @ARGV;
$whhost ||= 'host';
our $ho= selecthost($whhost);

if (defined $only) {
    power_state($ho, $only);
} else {
    power_cycle($ho);
}
